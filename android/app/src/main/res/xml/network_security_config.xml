<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow localhost for development (remove for production) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>
    <!-- Production domains (replace with your actual API domains) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">your-production-api-domain.com</domain>
        <domain includeSubdomains="true">your-staging-api-domain.com</domain>
    </domain-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>